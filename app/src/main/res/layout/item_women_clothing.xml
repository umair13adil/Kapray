<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/margin_2"
    app:cardElevation="@dimen/margin_4"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_cloth"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_300"
            android:minWidth="@dimen/margin_200"
            android:scaleType="centerCrop"
            android:src="@color/colorAccent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_brand_name"
                style="@style/TextTitleStyle.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_brand_logo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_55"
                android:scaleType="centerInside"
                android:src="@color/colorAccent"
                android:visibility="gone"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_date_purchased"
            style="@style/TextTitleStyle.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_season"
            style="@style/TextTitleStyle.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start" />
    </LinearLayout>

</androidx.cardview.widget.CardView>