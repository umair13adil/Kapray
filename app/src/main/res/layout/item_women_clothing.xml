<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/ripple"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/margin_0"
    app:cardElevation="@dimen/margin_4"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_cloth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_empty"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_brand_name"
                style="@style/TextTitleStyle.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Brand" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_brand_logo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_55"
                android:layout_gravity="start"
                android:scaleType="fitCenter"
                android:visibility="visible"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_date_purchased"
            style="@style/TextTitleStyle.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Date" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_season"
            style="@style/TextTitleStyle.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:gravity="center"
            android:text="Season"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="italic"
            app:textAllCaps="false" />
    </LinearLayout>

</androidx.cardview.widget.CardView>